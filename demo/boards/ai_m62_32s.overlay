&clk_bclk {
	divider = <4>;
};

&clk_root {
	clocks = <&clk_wifipll BL61X_WIFIPLL_OC_480MHz>;
};

&clk_flash {
		clocks = <&clk_bclk>;
		// clock-invert;
		read-delay = <1>;
		divider = <1>;
		//rx-clock-invert;
};

